{{ form_start(form) }}
<div class="mt-3 grid-form gap-2">
	{{ form_row(form.firstname) }}
	{{ form_row(form.age) }}
	{{ form_row(form.eyesColors) }}
	{{ form_row(form.skinColor) }}
	{{ form_row(form.facepowder) }}
	{{ form_row(form.lipStick) }}
	{{ form_row(form.eyeShadow) }}
	{{ form_row(form.highLighter) }}
	{{ form_row(form.occasion) }}
</div>

<div {{ stimulus_controller('form-collection') }} data-form-collection-index-value="{{ form.clothes|length }}" data-form-collection-prototype-value="{{ form_widget(form.clothes.vars.prototype)|e('html_attr') }}">
    
    <ul class="paragraph p-0" {{ stimulus_target('form-collection', 'collectionContainer') }}>
		{% for clotheForm in form.clothes %}
			<li>
				{{ form_row(clotheForm) }}
				<button type="button" class="btn btn-primary button-form-black mb-5" data-action="form-collection#removeClothe">Supprimer</button>
			</li>
		{% endfor %}
	</ul>

	<div class="button-form-end  pt-5 my-2">
		<button type="button" class="btn btn-primary button-form mt-1 mb-2" {{ stimulus_action('form-collection', 'addCollectionElement') }}>Ajouter un vêtement</button>
	</div>

</div>

<div class="button-form-end ">
	<button class="btn btn-primary button-form mt-4 mb-2">{{ button_label|default('Demander votre préconisation de maquillage') }}</button>
</div>
{{ form_end(form) }}
